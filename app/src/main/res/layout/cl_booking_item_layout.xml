<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:layout_marginBottom="@dimen/_4sdp"
    app:cardElevation="@dimen/_4sdp">

    <RelativeLayout
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/_130sdp"
            android:singleLine="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/bold_font"
            android:text="Bhagwat Event"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/event_booking_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:singleLine="true"
            android:maxWidth="@dimen/_150sdp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/regular_font"
            android:text="You Booked on : 27 Aug 2023"
            android:textSize="@dimen/_10sdp" />


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@id/event_title"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="#D8D8D8" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/regular_font"
            android:text="Your event date is : 01 Sep 2023"
            android:textSize="@dimen/_10sdp" />


        <TextView
            android:id="@+id/eventOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/bold_font"
            android:text="Accepted"
            android:textColor="#359C39"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>