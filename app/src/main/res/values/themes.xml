<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SMD" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/background_page</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Set the status bar background to your drawable -->
    </style>



    <style name="Theme.SMD" parent="Base.Theme.SMD" />


    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceOverlay">@style/MaterialAlertDialog.Rounded</item>
        <item name="cornerSize">@dimen/_19sdp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_bg_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/bold_font</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:inputType">textCapSentences</item>

        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:textColorHint">@color/greyFont</item>
    </style>




    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/bold_font</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>
</resources>